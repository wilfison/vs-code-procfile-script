{
  "name": "procfile-script",
  "displayName": "Procfile Script",
  "description": "Run scripts defined in your Procfile",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:Procfile",
    "workspaceContains:Procfile.dev"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "procfileScripts",
          "name": "Procfile Scripts",
          "icon": "$(file-text)"
        }
      ]
    },
    "configuration": {
      "title": "Procfile Scripts",
      "properties": {
        "procfile-script.files": {
          "type": "array",
          "default": [
            "Procfile",
            "Procfile.dev"
          ],
          "description": "Lista de arquivos Procfile a serem detectados"
        }
      }
    },
    "commands": [
      {
        "command": "procfile-script.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "procfile-script.startScript",
        "title": "Start Script",
        "icon": "$(play)"
      },
      {
        "command": "procfile-script.stopScript",
        "title": "Stop Script",
        "icon": "$(stop)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "procfile-script.refreshEntry",
          "when": "view == procfileScripts",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}